{
  "name": "whackamole-angular",
  "version": "1.0.0",
  "description": "A whackamole demo using AngularJS",
  "main": "index.js",
  "scripts": {
    "scss": "node-sass --output-style compressed -o dist/css src/scss",
    "serve": "browser-sync start --server --files 'index.html, dist/css/*.css, dist/js/*.js'",
    "lint": "eslint src/js",
    "uglify": "mkdir -p dist/js && uglifyjs src/js/*.js -m -o dist/js/app.js",
    "watch:css": "onchange 'src/scss/*.scss' -- npm run scss",
    "watch:js": "onchange 'src/js/*.js' -- npm run build:js",
    "app": "npm-run-all --parallel serve watch:css watch:js",
    "build:css": "npm run scss",
    "build:js": "npm run uglify",
    "build:all": "npm run build:css && npm run build:js"
  },
  "author": "Jeff Pelletier",
  "license": "ISC",
  "devDependencies": {
    "angular": "^1.6.4",
    "basscss-sass": "^4.0.0",
    "browser-sync": "^2.18.8",
    "eslint": "^3.18.0",
    "eslint-config-airbnb-base": "^11.1.2",
    "eslint-plugin-import": "^2.2.0",
    "node-sass": "^4.5.2",
    "npm-run-all": "^4.0.2",
    "onchange": "^3.2.1",
    "uglify-js": "^2.8.20"
  }
}
